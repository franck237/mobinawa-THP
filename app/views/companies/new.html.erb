<div class="slice-lg masthead">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3" style="background-color: white">

        <%= form_for @company, html: { method: :put} do |f| %>
          <br><br><h6 class="h3 mb-3 font-weight-normal text-center " style="color: #424140">Enregistrer votre société</h6>
              <p class="text-muted mb-0 text-center">Rejoindre le réseau pour profiter de nombreux services à valeur ajoutée</p><br>

              <div class="field">
                <label class="form-control-label ">Logo</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-upload"></i></span>
                      </div>
                      <%= f.file_field :logo, class: "form-control form-control-label", autofocus: true%>
                   </div>
              </div>


              <div class="field">
                <label class="form-control-label ">Company Name *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                      </div>
                      <%= f.text_field :name, class: "form-control form-control-label", autofocus: true,  placeholder: "Global Telecom Services" %>
                   </div>
              </div>

              <div class="form-group">
                <label class="form-control-label">Phone number *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                         <span class="input-group-text"><i class="fas fa-phone-alt"></i></span>
                      </div>
                        <%= f.telephone_field :number, class: "form-control form-control-label", autofocus: true, type: "tel", placeholder: "01 16 88 12 20 " %>
                   </div>
              </div>

              <div class="field">
                <label class="form-control-label ">Description (10 characters minimum) *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-keyboard"></i></span>
                      </div>
                      <%= f.text_area :description, class: "form-control form-control-label",rows: 3, autofocus: true,  placeholder: "GTS is the 1st Virtual Network Operator,Provider of Mobile Multi-Channel Access to ICT Services Companies of all sizes." %>
                   </div>
              </div>

              <div class="form-group">
                <label class="form-control-label ">Website</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-globe"></i></span>
                      </div>
                      <%= f.text_field :website, class: "form-control form-control-label", autofocus: true, placeholder: "www.gts.com" %>
                   </div>
              </div>

              <span class="clearfix"></span>
               <div class="form-group">
                 <label class="form-control-label">Email</label>
                     <div class="input-group input-group-transparent">
                        <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-paper-plane"></i></span>
                        </div>
                       <%= f.email_field :email, class: "form-control form-control-label", autofocus: true, autocomplete: "email", placeholder: "contact@company.com" %>
                     </div>
               </div>

              <div class="actions mt-5">
                  <%= f.submit "Register your company", class: "btn btn-lg btn-primary btn-block"  %>
                </div>
              <% end %>
 

              <div class="mt-3">
                  <div class="d-flex justify-content-between align-items-center">
                    	<button type="button" class="btn btn-light btn-icon">
                       <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                       <span class="btn-inner--text"><%= link_to "Back", :back %></span>
                       </button>
                         
                  </div>
              </div>
      </div>
    </div>
  </div>
</div>
