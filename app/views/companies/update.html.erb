<div style="text-align: center; ">
	<h3>Welcome <%= current_admin.firstname %> for updating your company <%= Company.find(params[:id]name %> 🔥</h3>
		<h5> 🏁 To add a product, Just fill on informations in the form below 🏁</h5>
			<div class='container mt-4'>
				<div class='justify-content-center'>
					<div class='col-12'>
						<!--<% if @item != nil %>
						<div class ='alert alert-danger'>
							<p>Impossiblede créer l'objet</p>
						</div>
						<% end %>-->
						<%= form_tag company_path, multipart: true do %>
							<div class='form-group'>
								<%= label_tag 'Choose a company' %>
								<%= text_field_tag :company_id, nil, class:'form-control' %>
							</div>
							<div class='form-group'>
								<%= label_tag 'Enter a title:' %>
								<%= text_field_tag :title, nil, class:'form-control' %>
							</div>
							<div class='form-group'>
								<%= label_tag 'Enter a description:' %>
								<%= text_area_tag :description, nil, class:'form-control', rows: 5 %>
								<small id="descriptionvalidation'" class="form-text text-muted">
				  			Your description must be between 20-2000 characters.
								</small>
							</div>
							<div class='form-group'>
								<%= label_tag 'Choose a price:' %>
								<br>
								<%= number_field_tag :price, nil, class:'special_input', rows: 2 %>
							</div>
							<div class='form-group'>
								<%= label_tag 'Quantity:' %>
								<br>
								<%= number_field_tag :quantity, nil, class:'special_input' %>
							</div>
							<div class='form-group'>
								<%= label_tag 'Upload an image:' %>
								<%= file_field_tag :photo_companies, class:'form-control-file' %>
							</div>

						<%= submit_tag 'Create Product', class:'btn btn-primary' %>


			<% end %>

			</div>
			</div>
			</div>
			</div>
