<div class="slice-lg masthead">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3" style="background-color: white">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <br><h6 class="h3 mb-3 font-weight-normal text-center " style="color: #424140">Connexion</h6>
              <p class="text-muted mb-0 text-center">Bienvenue sur votre espace admin Mobinawa</p><br>
          <%= devise_error_messages! %>

              <span class="clearfix"></span>
               <div class="form-group">
                 <label class="form-control-label">Email address *</label>
                     <div class="input-group input-group-transparent">
                        <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-paper-plane"></i></span>
                        </div>
                       <%= f.email_field :email, class: "form-control form-control-label", autofocus: true, autocomplete: "email", placeholder: "jack.donaghy@gmail.com" %>
                     </div>
               </div>

              <div class="form-group mb-4">
                <label class="form-control-label">Password *</label>
                   <% if @minimum_password_length %>
                     <em>(8 characters minimum)</em>
                   <% end %><br />
                   <div class="input-group input-group-transparent">
                       <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-key"></i></span>
                      </div>
                        <%= f.password_field :password, class: "form-control", id: "input-password", autocomplete: "current-password", placeholder: "********"  %>
                    </div>
              </div>
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              <div class="mt-3">
                  <div class="action d-flex justify-content-center" id="button_create_account">
                      <%= f.submit "Connexion", class: "btn btn-primary mb-3 mb-sm-0" %>
                  </div>
                  <br>
                  <div class="d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-light btn-icon">
                       <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                       <span class="btn-inner--text"><%= link_to "home page", root_path %></span>
                       </button>
                         <div class="col-sm-5 text-sm-right">
                           <span class="small d-sm-block d-md-inline" style="color: grey">Déjà inscrit ?</span><br>
                             <%= render "devise/shared/links" %> 
                             <br><br><br>
                         </div>
                  </div>
  
        <% end %>
        
      </div>
    </div>
  </div>
</div>









