<div class="slice-lg masthead"> 
    <div class="container d-flex align-items-center mt-lg">

        <div class="col mt-lg">
            <div class="row justify-content-center">
                <div class="card container col-md-8 col-lg-6 p-4 ">

                    <div class="text-center mb-5">
                        <h6 class="h3 mb-3 font-weight-normal text-center" style="color: #424140">Reset your password</h6>
                        <p class="text-muted mb-0">Set a new password</p>
                    </div>
                    <span class="clearfix"></span>

                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= devise_error_messages! %>

                        <div class="form-group text">
                            <label class="form-control-label">Adresse email</label>
                            <div class="input-group input-group-transparent">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <%= f.email_field :email, class: "form-control form-control-label", autofocus: true, autocomplete: "email", placeholder: "exemple@gmail.com" %>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <div class="">
                                <div><%= f.submit "Reset your password", class: "btn btn-primary mb-3 mb-sm-0" %></div>
                            </div>

                        </div>
                      <% end %>
                      <br>
                        <div class="d-flex justify-content-between align-items-center">
                    		<button type="button" class="btn btn-light btn-icon">
                            	<span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                            	<span class="btn-inner--text"><%= link_to "home page", root_path %></span>
                        	</button>
                </div>
            </div><br>
        </div>
    </div>
</div>