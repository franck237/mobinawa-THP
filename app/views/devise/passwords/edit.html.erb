<div class="slice-lg masthead"> 
    <div class="container d-flex align-items-center mt-lg">

        <div class="col mt-lg">
            <div class="row justify-content-center">
                <div class="card container col-md-8 col-lg-6 p-4 ">

                    <div class="text-center mb-5">
                        <h6 class="h3 mb-3 font-weight-normal text-center" style="color: #424140">Change your password</h6>
                        <p class="text-muted mb-0">Set a new password</p>
                    </div>
                    <span class="clearfix"></span>

                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>
                      <%= f.hidden_field :reset_password_token %>

                    <div class="form-group mb-4">
                      <label class="form-control-label">New Password * (6 characters minimum)</label>
                         <% if @minimum_password_length %>
                         <div class="input-group input-group-transparent">
                             <div class="input-group-prepend">
                                 <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                              <%= f.password_field :password, class: "form-control", id: "input-password", autocomplete: "new-password", placeholder: "********"  %>
                          </div>
                    </div>

                    <div class="form-group">
                       <label class="form-control-label">Confirm new password *</label>
                           <div class="input-group input-group-transparent">
                               <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                              </div>
                              <%= f.password_field :password_confirmation, class: "form-control", id: "input-password-confirm", autocomplete: "new-password", placeholder: "********" %>
                           </div>
                    </div>

                        <div class="d-flex justify-content-center">
                            <div class="">
                                <div><%= f.submit "change my password", class: "btn btn-primary mb-3 mb-sm-0" %></div>
                            </div>

                        </div>
                      <% end %>
                      <br>
                        <div class="d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-light btn-icon">
                              <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                              <span class="btn-inner--text"><%= link_to "home page", root_path %></span>
                          </button>
                          <%= render "devise/shared/links" %>
                </div>
            </div><br>
        </div>
    </div>
</div>
