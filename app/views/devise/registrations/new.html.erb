<div class="slice-lg masthead">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3" style="background-color: white">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
          <h6 class="h3 mb-3 font-weight-normal text-center " style="color: #424140">Rejoindre le réseau</h6>
              <p class="text-muted mb-0 text-center">Formulaire de création d'un compte administrateur</p><br>
          <%= devise_error_messages! %>

              <div class="form-group">
                <label class="form-control-label ">Country *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-globe-africa"></i></span>
                      </div>

                          <%= f.collection_select :country_id, Country.all, :id, :name ,class: "form-control form-control-label"%>
                   </div>
                </div>

              <div class="form-group">
                <label class="form-control-label ">First  Name *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                      </div>
                      <%= f.text_field :firstname, class: "form-control form-control-label", autofocus: true,  placeholder: "Jack" %>
                   </div>
                </div>
              <div class="form-group">
                <label class="form-control-label ">Last  Name *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                      </div>
                      <%= f.text_field :lastname, class: "form-control form-control-label", autofocus: true,  placeholder: "Donaghy" %>
                   </div>
              </div>

              <div class="form-group">
                <label class="form-control-label">Phone number *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                         <span class="input-group-text"><i class="fas fa-mobile"></i></span>
                      </div>
                        <%= f.telephone_field :number, class: "form-control form-control-label", autofocus: true, type: "tel", placeholder: "01 16 88 12 16 " %>
                   </div>
              </div>



              <div class="form-group">
                <label class="form-control-label ">Company Title *</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                      </div>
                      <%= f.text_field :function, class: "form-control form-control-label", autofocus: true, placeholder: "CEO" %>
                   </div>
                </div>


              <span class="clearfix"></span>
               <div class="form-group">
                 <label class="form-control-label">Email address *</label>
                     <div class="input-group input-group-transparent">
                        <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-paper-plane"></i></span>
                        </div>
                       <%= f.email_field :email, class: "form-control form-control-label", autofocus: true, autocomplete: "email", placeholder: "jack.donaghy@gmail.com" %>
                     </div>
               </div>

              <div class="form-group mb-4">
                <label class="form-control-label">Password *</label>
                   <% if @minimum_password_length %>
                     <em>(8 characters minimum)</em>
                   <% end %><br />
                   <div class="input-group input-group-transparent">
                       <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-key"></i></span>
                      </div>
                        <%= f.password_field :password, class: "form-control", id: "input-password", autocomplete: "new-password", placeholder: "********"  %>
                    </div>
              </div>

              <div class="form-group">
                 <label class="form-control-label">Confirm your password *</label>
                     <div class="input-group input-group-transparent">
                         <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <%= f.password_field :password_confirmation, class: "form-control", id: "input-password-confirm", autocomplete: "new-password", placeholder: "********" %>
                     </div>
              </div>

              <div class="mt-3">
                  <div class="d-flex justify-content-center" id="button_create_account">
                      <%= f.submit "Create your account", class: "btn btn-primary mb-3 mb-sm-0" %>
                  </div>
                  <br>
                  <div class="d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-light btn-icon">
                       <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                       <span class="btn-inner--text"><%= link_to "home page", root_path %></span>
                       </button>
                         <div class="col-sm-5 text-sm-right">
                           <span class="small d-sm-block d-md-inline" style="color: grey">Déjà inscrit ?</span><br>
                             <%= render "devise/shared/links" %> 
                             <br><br><br>
                         </div>
                  </div>
  
        <% end %>
        
      </div>
    </div>
  </div>
</div>