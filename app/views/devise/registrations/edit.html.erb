<div class="slice-lg masthead">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3" style="background-color: white">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put} do |f| %>
          <h6 class="h3 mb-3 font-weight-normal text-center " style="color: #424140">Modifier mon profil</h6>
              <p class="text-muted mb-0 text-center">Mise Ã  jour de votre profil administrateur</p><br>
        <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <label class="form-control-label ">Photo</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-upload"></i></span>
                      </div>
                      <%= f.file_field :photo_admin, class: "form-control form-control-label", autofocus: true%>
                   </div>
              </div>



              <div class="field">
                <label class="form-control-label ">First  Name</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                      </div>
                      <%= f.text_field :firstname, class: "form-control form-control-label", autofocus: true,  placeholder: "Jack" %>
                   </div>
              </div>
              <div class="form-group">
                <label class="form-control-label ">Last  Name </label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                      </div>
                      <%= f.text_field :lastname, class: "form-control form-control-label", autofocus: true,  placeholder: "Donaghy" %>
                   </div>
              </div>

              <div class="form-group">
                <label class="form-control-label">Phone number</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                         <span class="input-group-text"><i class="fas fa-mobile"></i></span>
                      </div>
                        <%= f.telephone_field :number, class: "form-control form-control-label", autofocus: true, type: "tel", placeholder: "01 16 88 12 16 " %>
                   </div>
              </div>



              <div class="form-group">
                <label class="form-control-label ">Company Title</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                      </div>
                      <%= f.text_field :function, class: "form-control form-control-label", autofocus: true, placeholder: "CEO" %>
                   </div>
              </div>


              <span class="clearfix"></span>
               <div class="form-group">
                 <label class="form-control-label">Email address</label>
                     <div class="input-group input-group-transparent">
                        <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-paper-plane"></i></span>
                        </div>
                       <%= f.email_field :email, class: "form-control form-control-label", autofocus: true, autocomplete: "email", placeholder: "jack.donaghy@gmail.com" %>
                     </div>
               </div>
                 <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
               <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
               <% end %>

              <div class="form-group mb-4">
                <label class="form-control-label">Password (6 characters minimum)</label> <i style="color: grey">leave blank if you don't want to change it</i><br />
                   <% if @minimum_password_length %>
                   <div class="input-group input-group-transparent">
                       <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-key"></i></span>
                      </div>
                        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "********"  %>
                    </div>
              </div>


              <div class="form-group">
                 <label class="form-control-label">Confirm your password </label><i style="color: grey"> leave blank if you didn't change it</i><br />
                     <div class="input-group input-group-transparent">
                         <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <%= f.password_field :password_confirmation, class: "form-control", id: "input-password-confirm", autocomplete: "new-password", placeholder: "********" %>
                     </div>
              </div>


              <div class="form-group mb-4">
                  <label class="form-control-label">Current password *</label> <i style="color: grey">(we need your current password to confirm your changes)</i><br />
                   <% if @minimum_password_length %>
                   <div class="input-group input-group-transparent">
                       <div class="input-group-prepend">
                           <span class="input-group-text"><i class="fas fa-key"></i></span>
                      </div>
                        <%= f.password_field :current_password, class: "form-control", id: "input-password", autocomplete: "current-password", placeholder: "********"  %>
                    </div>
              </div>
              

              <div class="actions mt-5">
                  <%= f.submit "Update my Profile", class: "btn btn-lg btn-primary btn-block"  %>
                </div>
              <% end %>
              <% end %>
              <% end %>

              <div class="mt-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-light btn-icon">
                       <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                       <span class="btn-inner--text"><%= link_to "Back", :back %></span>
                       </button>
                         <div class="col-sm-5 text-sm-right">
                           <span class="small d-sm-block d-md-inline" style="color: grey">Unhappy?</span><br>
                             <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> 
                             <br><br><br>
                         </div>
                  </div>
              </div>
      </div>
    </div>
  </div>
</div>
