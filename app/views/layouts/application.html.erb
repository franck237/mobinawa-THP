<!DOCTYPE html>
<html>
  <head>
    <title>Mobinawa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render 'application/favicon' %>
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <link href='https://cdn.lineicons.com/1.0.1/LineIcons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700,800|Roboto:400,500,700" rel="stylesheet"> 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'background_sector', media: 'all', 'data-turbolinks-track': 'reload'%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>  
    <script src="https://kit.fontawesome.com/66959b10c2.js"></script> 
  </head>
  <body>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to 'Mobinawa', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
​
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
          <%= link_to 'Home', root_path, class: "nav-link btn mr-1"  %>
          </li>
        </ul>
       
        <ul class="navbar-nav my-2 my-lg-0" style="position: absolute; left: 80%;">
        <% if !current_admin%> 
          <li class="nav-item">
          <%=link_to 'SignIn', new_admin_session_path, class: "btn btn-outline-primary mr-2" %>
          </li>
          <li class="nav-item">
          <%= link_to 'SignUp',new_admin_registration_path, class: "btn btn-outline-primary" %>
          </li>
          <% else %>
          <li class="nav-item ">
          <%= link_to 'My Profile',admin_path(current_admin.id), class: "nav-link btn mr-1" %>
          </li>
          <li class="nav-item ">
          <%= link_to 'SignOut',destroy_admin_session_path, method: :delete, data: {confirm: 'Êtes-vous sûr de vous déconnecter ?'}, class: "nav-link btn btn-outline-danger" %> 
          </li>
        <% end %>
        </ul>   
      </div>
    </nav>
    <%= yield %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.x.x/js/swiper.min.js"></script>
  </body>
</html>
